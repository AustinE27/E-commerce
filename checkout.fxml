<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ecommercestoreprojecttemp.CheckoutController">
    
    <left>
        <VBox fx:id="cartSummary" spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
            <Label text="Order Summary" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Separator/>
            <!-- Cart items will be added here dynamically -->
        </VBox>
    </left>
    
    <center>
        <VBox fx:id="mainContent" spacing="20" style="-fx-padding: 20;">
            <!-- Main content will be loaded here -->
        </VBox>
    </center>
    
</BorderPane> 