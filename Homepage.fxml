<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ecommercestoreprojecttemp.HomepageController"
            prefHeight="600.0" prefWidth="800.0">

    <children>
        <VBox fx:id="productContainer" layoutX="50.0" layoutY="100.0" spacing="20.0" />

        <Label layoutX="250.0" layoutY="20.0" text="Welcome to Our Store">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <Button fx:id="cartButton" layoutX="650.0" layoutY="20.0" text="View Cart" onAction="#openCart"/>
    </children>
</AnchorPane>
