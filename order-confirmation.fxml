<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ecommercestoreprojecttemp.OrderConfirmationController"
      spacing="20"
      style="-fx-padding: 20;">

    <Label text="Order Confirmation" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 5;">
        <Label fx:id="orderNumberLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Separator/>

        <VBox spacing="10" style="-fx-background-color: #e8f5e9; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="Customer Information" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Label fx:id="emailLabel"/>
            <Label fx:id="nameLabel"/>
            <Label fx:id="addressLabel"/>
        </VBox>

        <Separator/>

        <VBox spacing="10" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="Payment Information" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Label fx:id="cardLastFourLabel"/>
            <Label fx:id="cardNameLabel"/>
        </VBox>
    </VBox>

    <Label text="Thank you for your purchase! A confirmation email has been sent to your email address."
           wrapText="true"
           maxWidth="800"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

</VBox>
